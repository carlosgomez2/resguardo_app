<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Paquetes del cliente</h1>
  <hr />
  <%= render 'search' %>
  <hr />
  <div class="container">
    <table class="table table-striped table-hover text-center">
      <thead>
        <tr class="success">
          <th class="text-center">
            ID Cliente
          </th>
          <th class="text-center">
            Nombre del Cliente
          </th>
          <th class="text-center">
            Telefono
          </th>
        </tr>
      </thead>
      <tbody>
        <tr class="active">
          <td>
            <%= @client.id %>
          </td>
          <td>
            <%= @client.first_name %> <%= @client.second_name %> <%= @client.last_name %> <%= @client.second_last_name %>
          </td>
          <td>
            <%= @client.principal_phone %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <!-- <hr /> -->
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <!-- <th>Package dimentions</th>
        <th>Package weight</th>
        <th>Safeguard time</th>
        <th>Outbound packet time</th>
        <th>Entry packet time</th>
        <th>Batch number</th>
        <th>Client</th> -->
        <th>ID Cliente</th>
        <th>Paquete Registrado</th>
        <th>Dimensiones del paquete</th>
        <th>Fecha de salida del paquete</th>
        <th>Lote de almacenamiento</th>
        <th>Resguardo Ilimitado?</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @client.packages.each do |package| %>
        <tr>
          <td><%= package.client.id %></td>
          <td><%= package.created_at %></td>
          <td><%= package.package_dimentions %></td>
          <!-- <td> package.package_weight</td>
          <td> package.safeguard_time</td> -->
          <td><%= package.outbound_packet %></td>
          <!-- <td>package.entry_packet_time</td> -->
          <td><%= package.batch_number %></td>
          <td><%= package.safeguard_time ? "Ilimitado" : "Expira" %></td>
          <!-- <td> package.client </td> -->
          <td><%= link_to 'Ver detalle', client_package_path(:id => package), :class => "btn btn-info btn-xs" %></td>
          <td><%= link_to 'Editar', edit_client_package_path(:id => package), :class => "btn btn-warning btn-xs" %></td>
          <td><%= link_to 'Eliminar!', client_package_path(:id => package), method: :delete, data: { confirm: 'Estas seguro? NO se puede deshacer...' }, :class => "btn btn-danger btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= render 'paginate' %>

  <div class="btn-group btn-group-justified">
    <!-- link_to 'Regresar a clientes', clients_path, :class => "btn btn-default btn-lg btn-block" -->
    <%= link_to 'Regresar a cliente', client_path(@client), :class => "btn btn-default btn-lg btn-block" %>
    <%= link_to 'AÃ±adir paquete', new_client_package_path, :class => "btn btn-success btn-lg btn-block" %>
  </div>


</div>
