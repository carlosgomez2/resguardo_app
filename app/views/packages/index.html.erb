<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Paquetes del cliente</h1>
  <hr />
  <!-- Search -->
  <div class="row search">
    <div class="col-xs-12 pull-right">
      <%= form_tag client_packages_path, :method => "get" do %>
      <p>
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Localiza cualquier paquete del cliente, puedes buscar: fechas, dimensiones, peso, etc." %>
      </p>
      <p class="pull-right">
        <%= submit_tag "Buscar", class: 'btn btn-default' %>
      </p>
      <% end %>
    </div>
  </div>
  <!-- ./Search -->
  <hr />
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <!-- <th>Package dimentions</th>
        <th>Package weight</th>
        <th>Safeguard time</th>
        <th>Outbound packet time</th>
        <th>Entry packet time</th>
        <th>Batch number</th>
        <th>Client</th> -->
        <th>ID Cliente</th>
        <th>Paquete Registrado</th>
        <th>Dimensiones del paquete</th>
        <th>Fecha de salida del paquete</th>
        <th>Lote de almacenamiento</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @client.packages.each do |package| %>
        <tr>
          <td><%= package.client.id %></td>
          <td><%= package.created_at %></td>
          <td><%= package.package_dimentions %></td>
          <!-- <td> package.package_weight</td>
          <td> package.safeguard_time</td> -->
          <td><%= package.outbound_packet_time %></td>
          <!-- <td>package.entry_packet_time</td> -->
          <td><%= package.batch_number %></td>
          <!-- <td> package.client </td> -->
          <td><%= link_to 'Ver detalle', package, :class => "btn btn-info" %></td>
          <td><%= link_to 'Editar', edit_package_path(package), :class => "btn btn-warning" %></td>
          <td><%= link_to 'Eliminar!', package, method: :delete, data: { confirm: 'Estas seguro? NO se puede deshacer...' }, :class => "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br />
    <div class="text-center">
      <%= will_paginate @packages, previous_label: "Anterior", next_label: "Siguiente", renderer: BootstrapPagination::Rails %>
    </div>
  <br />

  <%= link_to 'Regresar a clientes', clients_path, :class => "btn btn-default btn-lg btn-block" %>
</div>
