<br />
<br />
<div class="container">
  <table class="table table-striped table-hover text-center">
    <thead>
      <tr class="active">
        <th class="text-center">
          ID Cliente
        </th>
        <th class="text-center">
          Nombre del Cliente
        </th>
        <th class="text-center">
          Telefono
        </th>
      </tr>
    </thead>
    <tbody>
      <tr class="default">
        <td>
          <%= @client.id %>
        </td>
        <td>
          <%= @client.first_name %> <%= @client.second_name %> <%= @client.last_name %> <%= @client.second_last_name %>
        </td>
        <td>
          <%= @client.principal_phone %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<br />

<div class="container">

    <table class="table table-striped table-hover ">
      <thead>
        <tr class="info">
          <th>
            Información
          </th>
          <th>
            Datos Recepción
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="td">
            Recepción del paquete:
          </td>
          <td>
            <%= @package.reception_method.capitalize %>
          </td>
        </tr>
        <tr>
          <td class="td">
            Guía de rastreo (Ingreso):
          </td>
          <td class="bold">
            <%= @package.reception_guide %>
          </td>
        </tr>
        <tr>
          <td class="td">
            Entrada del paquete:
          </td>
          <td class="td">
            <%= @package.entry_packet %>
          </td>
        </tr>
      </tbody>
    </table>

    <table class="table table-striped table-hover ">
      <thead>
        <tr class="info">
          <th>
            Información
          </th>
          <th>
            Datos Envió
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="td">
            Metodo de envió:
          </td>
          <td>
            <%= @package.shipping_method %>
          </td>
        </tr>
        <tr>
          <td class="td">
            Guía de rastreo (Salida):
          </td>
          <td class="bold">
            <%= @package.shipping_guide %>
          </td>
        </tr>
        <tr>
          <td class="td">
            Salida del paquete:
          </td>
          <td class="td">
            <%= @package.outbound_packet %>
          </td>
        </tr>
      </tbody>
    </table>

    <table class="table table-striped table-hover ">
      <thead>
        <tr class="info">
          <th>
            Información
          </th>
          <th>
            Datos del Paquete
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="td">
            Dimensiones del paquete:
          </td>
          <td class="td">
            <%= @package.package_dimentions %>
          </td>
        </tr>
        <tr>
          <td class="td">
            Peso del paquete:
          </td>
          <td>
            <%= @package.package_weight %>
          </td>
        </tr>
        <tr>
          <td class="td">
            Lote de almacenamiento:
          </td>
          <td class="td">
            <%= @package.batch_number %>
          </td>
        </tr>
        <tr>
          <td class="td">
            Código identificador:
          </td>
          <td class="barcode td">
            <%= @package.barcode_packet %>
          </td>
        </tr>
      </tbody>
    </table>

    <table class="table table-striped table-hover ">
      <thead>
        <tr class="info">
          <th>
            Información
          </th>
          <th>
            Estado del paquete
          </th>
        </tr>
      </thead>
      <tbody>
        <tr class="info-package">
          <td class="td">
            Paquete entregado?
          </td>
          <td class="bold td">
            <%= @package.delivered_package ? "Entregado" : "Resguardado" %>
          </td>
        </tr>
        <tr class="info-package">
          <td class="td">
            Resguardo Ilimitado?
          </td>
          <td class="bold td">
            <%= @package.safeguard_time ? "Ilimitado" : "Expira" %>
          </td>
        </tr>
      </tbody>
    </table>

  <br />
  <div class="btn-group btn-group-justified">
    <%= link_to 'Regresar a los paquetes', client_packages_path, :class => "btn btn-default btn-lg btn-block" %>
    <%= link_to 'Editar datos del paquete', edit_client_package_path(:id => @package), :class => "btn btn-warning" %>
    <%= link_to 'Descargar Reporte de Ingreso',  client_package_path(:id => @package, format: "pdf"), :class => "btn btn-success" %>
  </div>
</div>
