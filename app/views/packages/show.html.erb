<div class="container">
  <table class="table table-striped table-hover text-center">
    <thead>
      <tr class="success">
        <th class="text-center">
          ID Cliente
        </th>
        <th class="text-center">
          Nombre del Cliente
        </th>
        <th class="text-center">
          Telefono
        </th>
      </tr>
    </thead>
    <tbody>
      <tr class="active">
        <td>
          <%= @client.id %>
        </td>
        <td>
          <%= @client.first_name %> <%= @client.second_name %> <%= @client.last_name %> <%= @client.second_last_name %>
        </td>
        <td>
          <%= @client.principal_phone %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<br />
<div class="container">
  <p id="notice"><%= notice %></p>
  <table class="table table-striped table-hover ">
    <thead>
      <tr class="info">
        <th>
          Informaci√≥n
        </th>
        <th>
          Datos del Paquete
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          Dimensiones del paquete:
        </td>
        <td>
          <%= @package.package_dimentions %>
        </td>
      </tr>
      <tr>
        <td>
          Peso del paquete:
        </td>
        <td>
          <%= @package.package_weight %>
        </td>
      </tr>
      <tr>
        <td>
          Tiempo de resguardo:
        </td>
        <td>
          <%= @package.safeguard_time %>
        </td>
      </tr>
      <tr>
        <td>
          Entrada del paquete:
        </td>
        <td>
          <%= @package.entry_packet_time %>
        </td>
      </tr>
      <tr>
        <td>
          Salida del paquete:
        </td>
        <td>
          <%= @package.outbound_packet_time %>
        </td>
      </tr>
      <tr>
        <td>
          Lote de almacenamiento:
        </td>
        <td>
          <%= @package.batch_number %>
        </td>
      </tr>
    </tbody>
  </table>
  <br />
  <div class="btn-group btn-group-justified">
     <!-- link_to 'Regresar a Clientes', clients_path, :class => "btn btn-default"  -->
