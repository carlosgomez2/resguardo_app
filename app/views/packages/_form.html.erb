<%= form_for([@client, @package]) do |f| %>
  <% if @package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
      <% @package.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="panel panel-default">
  <div class="panel-body">
    <form class="form-horizontal">
      <fieldset>
        <legend class="text-center">Ingrese aquí los datos</legend>

        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title">1. Recepción</h3>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label class="col-lg-6 control-label">Recepción del paquete</label>
              <div class="col-lg-12 ">
                <%= f.text_field :reception_method, :class => "form-control", :placeholder => "Como se recibio el paquete?", :autofocus => true %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Guía de rastreo (Ingreso)</label>
              <div class="col-lg-12">
                <%= f.text_field :reception_guide, :class => "form-control", :placeholder => "Cuál es la guía?" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Fecha de Entrada del Paquete</label>
              <div class="col-lg-12">
                <%= f.date_select :entry_packet, start_year: 2016, end_year: 2100 %>
              </div>
            </div>
          </div>
        </div>

        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title">2. Envió del paquete</h3>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label class="col-lg-6 control-label">Metodo de envió</label>
              <div class="col-lg-12">
                <%= f.text_field :shipping_method, :class => "form-control", :placeholder => "Como se va a enviar el paquete?" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Guía de rastreo (Salida)</label>
              <div class="col-lg-12">
                <%= f.text_field :shipping_guide, :class => "form-control", :placeholder => "Cuál es la guía?" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Fecha de Salida del Paquete</label>
              <div class="col-lg-12">
                <%= f.date_select :outbound_packet, start_year: 2016, end_year: 2100 %>
              </div>
            </div>
          </div>
        </div>


        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title">3. Detalles del paquete</h3>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label class="col-lg-6 control-label">Dimensiones del paquete</label>
              <div class="col-lg-12">
                <%= f.text_field :package_dimentions, :class => "form-control", :placeholder => "Ej. 35 * 45" %>
              </div>
            </div>
            <!-- <div class="form-group">
              <label class="col-lg-6 control-label">Peso del Paquete</label>
              <div class="col-lg-12">
                <%= f.number_field :package_weight, :class => "form-control" %>
              </div>
            </div> -->
            <div class="form-group">
              <label class="col-lg-6 control-label block">Peso del Paquete</label>
              <div class="kg-padding">
                <div class="input-group">
                  <%= f.number_field :package_weight, :class => "form-control" %>
                  <span class="input-group-addon">Kg.</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title">4. Detalles de resguardo</h3>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label class="col-lg-6 control-label">Paquete Entregado?</label>
              <div class="col-lg-12">
                <%= f.check_box :delivered_package %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Tiempo de Resguardo Ilimitado?</label>
              <div class="col-lg-12">
                <%= f.check_box :safeguard_time %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Número de Lote</label>
              <div class="col-lg-12">
                <%= f.text_field :batch_number, :placeholder => "Ej. 007", :class => "form-control" %>
              </div>
            </div>
          </div>
        </div>

        <div class="panel panel-warning">
          <div class="panel-heading">
            <h3 class="panel-title">Identificadores</h3>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label class="col-lg-6 control-label">Código Identificador</label>
              <div class="col-lg-12">
                <%= f.text_field :barcode_packet, :size => 35, :readonly => true %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">ID del Cliente</label>
              <div class="col-lg-12">
                <%= f.text_field :client_id, :size => 6, :readonly => true %>
              </div>
            </div>
          </div>
        </div>

      </fieldset>
      <br />
      <div class="actions">
        <%= f.submit 'Ingresar datos', :class => "btn btn-success center-block" %>
      </div>
    </form>
  </div>
</div>

<% end %>
