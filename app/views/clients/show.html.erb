<div class="container">
  <p id="notice"><%= notice %></p>
  <h1 class="text-center">Información del cliente</h1>
  <hr />
  <table class="table table-striped table-hover ">
    <thead>
      <tr class="info">
        <th>
          Información
        </th>
        <th>
          Datos del Cliente
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          Nombre:
        </td>
        <td>
          <%= @client.first_name.capitalize %> <%= @client.second_name.capitalize %> <%= @client.last_name.capitalize %> <%= @client.second_last_name.capitalize %>
        </td>
      </tr>
      <tr>
        <td>
          Teléfono principal:
        </td>
        <td>
          <%= @client.principal_phone %>
        </td>
      </tr>
      <tr>
        <td>
          Teléfono celular:
        </td>
        <td>
          <%= @client.cellphone %>
        </td>
      </tr>
      <tr>
        <td>
          Email:
        </td>
        <td>
          <%= @client.email %>
        </td>
      </tr>
      <tr>
        <td>
          Fecha de nacimiento:
        </td>
        <td>
          <%= @client.birth %>
        </td>
      </tr>
      <tr>
        <td>
          Dirección:
        </td>
        <td>
          <%= @client.address.capitalize %>
        </td>
      </tr>
      <tr>
        <td>
          Código Postal:
        </td>
        <td>
          <%= @client.postal_code %>
        </td>
      </tr>
      <tr>
        <td>
          Ciudad:
        </td>
        <td>
          <%= @client.city.capitalize %>
        </td>
      </tr>
      <tr>
        <td>
          Estado:
        </td>
        <td>
          <%= @client.state.capitalize %>
        </td>
      </tr>
      <tr class="emergency-contact">
        <td>
          Contacto de emergencia:
        </td>
        <td>
          <%= @client.emergency_contact_full_name.capitalize %>
        </td>
      </tr>
      <tr class="emergency-contact">
        <td>
          Dirección contacto:
        </td>
        <td>
          <%= @client.emergency_contact_address.capitalize %>
        </td>
      </tr>
      <tr class="emergency-contact">
        <td>
          Teléfono de contacto:
        </td>
        <td>
          <%= @client.emergency_contact_phone %>
        </td>
      </tr>
    </tbody>
  </table>
  <br />
  <div class="btn-group btn-group-justified">
    <%= link_to 'Regresar a clientes', clients_path, :class => "btn btn-default" %>
    <%= link_to 'Editar cliente', edit_client_path(@client), :class => "btn btn-warning" %>
    <%= link_to 'Mostrar paquetes', client_packages_path(@client), :class => "btn btn-success" %>
  </div>
</div>
