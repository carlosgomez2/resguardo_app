<%= form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error")%> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel panel-default">
  <div class="panel-body">
    <form class="form-horizontal">
      <fieldset>
        <legend class="text-center">Ingrese aquí los datos</legend>

        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title">1. Datos del Cliente</h3>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label class="col-lg-6 control-label">Primer Nombre</label>
              <div class="col-lg-12">
                <%= f.text_field :first_name, :class => "form-control", :placeholder => "Primer Nombre", :autofocus => true %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Segundo Nombre</label>
              <div class="col-lg-12">
                <%= f.text_field :second_name, :class => "form-control", :placeholder => "Segundo Nombre" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Primer Apellido</label>
              <div class="col-lg-12">
                <%= f.text_field :last_name, :class => "form-control", :placeholder => "Primer Apellido" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Segundo Apellido</label>
              <div class="col-lg-12">
                <%= f.text_field :second_last_name, :class => "form-control", :placeholder => "Segundo Apellido" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Fecha de Nacimiento</label>
              <div class="col-lg-12">
                <%= f.date_select :birth, start_year: 1915, :class => "form-control" %>
              </div>
            </div>
          </div>
        </div>

        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title">2. Datos de contacto</h3>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label class="col-lg-6 control-label">Dirección</label>
              <div class="col-lg-12">
                <%= f.text_field :address, :class => "form-control", :placeholder => "Dirección" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Código Postal</label>
              <div class="col-lg-12">
                <%= f.text_field :postal_code, :class => "form-control", :placeholder => "Código Postal" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Ciudad</label>
              <div class="col-lg-12">
                <%= f.text_field :city, :class => "form-control", :placeholder => "Ciudad" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Estado</label>
              <div class="col-lg-12">
                <%= f.text_field :state, :class => "form-control", :placeholder => "Estado" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Teléfono Principal</label>
              <div class="col-lg-12">
                <%= f.text_field :principal_phone, :class => "form-control", :placeholder => "Teléfono Principal" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Teléfono Celular</label>
              <div class="col-lg-12">
                <%= f.text_field :cellphone, :class => "form-control", :placeholder => "Teléfono Celular" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-6 control-label">Email</label>
              <div class="col-lg-12">
                <%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
              </div>
            </div>
          </div>
        </div>

        <div class="panel panel-warning">
          <div class="panel-heading">
            <h3 class="panel-title">3. Datos del contacto de emergencia</h3>
          </div>
          <div class="panel-body">
            <div class="form-group has-warning">
              <label class="col-lg-6 control-label">Nombre del Contacto de Emergencia</label>
              <div class="col-lg-12">
                <%= f.text_field :emergency_contact_full_name, :class => "form-control", :placeholder => "Nombre del Contacto de Emergencia" %>
              </div>
            </div>
            <div class="form-group has-warning">
              <label class="col-lg-6 control-label">Dirección del Contacto de Emergencia</label>
              <div class="col-lg-12">
                <%= f.text_field :emergency_contact_address, :class => "form-control", :placeholder => "Dirección del Contacto de Emergencia" %>
              </div>
            </div>
            <div class="form-group has-warning">
              <label class="col-lg-6 control-label">Teléfono del Contacto de Emergencia</label>
              <div class="col-lg-12">
                <%= f.text_field :emergency_contact_phone, :class => "form-control", :placeholder => "Teléfono del Contacto de Emergencia" %>
              </div>
            </div>
          </div>
        </div>

      </fieldset>
      <br />
      <div class="actions">
        <%= f.submit 'Ingresar datos', :class => "btn btn-success center-block" %>
      </div>
    </form>
  </div>
</div>
<br />
<% end %>
