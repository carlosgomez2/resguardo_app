<!-- Search -->
<div class="row search">
  <div class="col-xs-12 pull-right">
    <%= form_tag clients_path, :method => "get" do %>
    <p>
      <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Busca un cliente o busca cualquier campo del cliente, ej. email, teléfono, dirección, etc." %>
    </p>
    <p class="pull-right">
      <%= submit_tag "Buscar", class: 'btn btn-default' %>
    </p>
    <% end %>
  </div>
</div>
<!-- ./Search -->
